@model IEnumerable<CardGame.Web.Models.Card>


@{
    ViewBag.Title = "CardCollection";
}



<div class="scroller-card-collection row col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <h2>see your Card Collection ...</h2>
    <table class="table">
        <tr>
            <th>
                Pic
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Mana)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Attack)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Life)
            </th>
        </tr>

        @foreach (var card in Model)
        {
            <tr>
                <th>
                    @{var base64 = Convert.ToBase64String(card.Pic);
                        var imgSrc = String.Format("data:image/png;base64,{0}", base64);
                     
                    <img class="cardpic" src="@imgSrc"/>
                    }
                </th>
                <th>
                    @Html.DisplayFor(c => card.Name)
                </th>
                <th>
                    @Html.DisplayFor(c => card.Mana)
                </th>
                <th>
                    @Html.DisplayFor(c => card.Attack)
                </th>
                <th>
                    @Html.DisplayFor(c => card.Life)
                </th>
            </tr>
        }

    </table>
    @Html.ActionLink("Back to Profile", "Index")
</div>

<div class="scroller-seite-zwei-cardcollection row col-lg-6 col-md-6 col-sm-6 col-xs-6">

    Cardcollection
</div>
    
