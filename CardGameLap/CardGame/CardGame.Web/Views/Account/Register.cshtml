@model CardGame.Web.Models.Register
@{
    ViewBag.Title = "Register";
}


<body>
<div class="booklets" id="background">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 side" id="left">
            <div class="panell" id="backgroundleft">
                <div class="text-left-registration"> 
                    <p>ADS</p>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 side" id="left">
            <div class="panell" id="backgroundright">
                <div class="layout-background" id="wood_background">


                    @using (Html.BeginForm())

                    {
                        @Html.ValidationSummary(true)

                        <h2>REGISTRATION</h2>
                            <div class="form-group">
                               @Html.LabelFor(u => u.Firstname, htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(u => u.Firstname, htmlAttributes: new { @class = "form-control", placeholder = "Enter Firstname", id = "firstname" })
                            @Html.ValidationMessageFor(u => u.Gamertag)

                                @Html.LabelFor(u => u.Lastname, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(u => u.Lastname, htmlAttributes: new { @class = "form-control", placeholder = "Enter Lastname", id = "lastname" })
                                @Html.ValidationMessageFor(u => u.Gamertag)

                                @Html.LabelFor(u => u.Gamertag, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(u => u.Gamertag, htmlAttributes: new { @class = "form-control", placeholder = "Enter Gamertag", id = "gamertag" })
                                @Html.ValidationMessageFor(u => u.Gamertag)

                                @Html.LabelFor(u => u.Email, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(u => u.Email, htmlAttributes: new { @class = "form-control", placeholder = "Enter Email", id = "email" })
                                @Html.ValidationMessageFor(u => u.Email)
                          
                                @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(u => u.Password, htmlAttributes: new { @class = "form-control", placeholder = "Enter Password" })
                                @Html.ValidationMessageFor(u => u.Password)

                                @Html.LabelFor(u => u.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(u => u.ConfirmPassword, htmlAttributes: new { @class = "form-control", placeholder = "Confirm Password", id = "password" })
                                @Html.ValidationMessageFor(u => u.ConfirmPassword)
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-submit">Sign-up</button>
                            </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</body>
