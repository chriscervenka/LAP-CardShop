                <div class="panell" id="backgroundleft">
                    <div class="layout-background" id="wood_background">
                        @{if (User.Identity.Name == "")
                            {
                                <h1>Welcome</h1>
                            }
                            else
                            {
                                <h2> Welcome</h2>
                                <h2>@ViewBag.Gamertag</h2>
                                <h2>to the amazing Shop of</h2>

                            }
                        }

                        <h1>CLONESTONE</h1>
