                </div>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6 side" id="right">
                <div class="panell" id="backgroundright">
                    <div class="layout-background" id="wood_background">
                        <h2>see all available Cardpacks</h2>
                        <br />
                        <div class="">
                            
                            @foreach (var cp in Model.cardPacks)
                            {
                                <div class="packages-shopstart row col-sm-12">
                                    <hr />
                                    <div class="row col-sm-6">
                                        <img src="~/Content/Images/pack1.png" alt="diamond" height="120" width="90" />
                                    </div>
                                    <br />
                                    <div class="row col-sm-6">
                                        
                                        @Html.DisplayFor(cardpack => cp.Packname) 
                                    <br />
                                        @Html.DisplayFor(cardpack => cp.Packprice) <img src="~/Content/Images/diamond.png" alt="diamond" height="25" width="25" />
                                    </div>
                                    <br />
                                </div>
                            }
                        </div>
                        <br />

