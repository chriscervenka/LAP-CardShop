@model CardGame.Web.Models.Order

@{
    ViewBag.Title = "OrderDetails";
}



    <div class="scroller row col-lg-6 col-md-6 col-sm-6 col-xs-6">
        @*<h3>Pack Overview</h3><br>*@
        @Html.Partial("_OrderDetails")
    </div>


@*TODO If else wenn Diamantenkauf oder Packageskauf*@


<div class="scroller-seite-zwei row col-lg-6 col-md-6 col-sm-6 col-xs-6">
    @*<h3>Modal </h3>*@
    <br>
    <div class="container">
        <h2>Press button for your payment ...</h2>
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Payment</button>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                        <div class="container">
                            <div class="row">
                                <div class="span12">
                                    @using (Html.BeginForm())
                                    {
                                            <h3>Payment</h3>
                                            <div class="form-group">
                                                @Html.LabelFor(u => u.Payment.CardHolder, htmlAttributes: new { @class = "control-label" })
                                                <div class="controls">
                                                    <div class="row-fluid">
                                                       
                                                        @Html.TextBoxFor(u => u.Payment.CardHolder, htmlAttributes: new { @class = "form-control", placeholder = "Creditcard Holder", id = "credeitcardholder" })
                                                        @Html.ValidationMessageFor(u => u.Payment.CardHolder)
                                                        
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(u => u.Payment.CreditCardNumber, htmlAttributes: new { @class = "control-label" })
                                                <div class="controls">
                                                    <div class="row-fluid">

                                                        @Html.TextBoxFor(u => u.Payment.CreditCardNumber, htmlAttributes: new { @class = "form-control", placeholder = "Creditcard Number", id = "credeitcardholder" })
                                                        @Html.ValidationMessageFor(u => u.Payment.CreditCardNumber)

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(u => u.Payment.ExpireMonth, htmlAttributes: new { @class = "control-label" })
                                                <div class="controls">
                                                    <div class="row-fluid">
                                                        @Html.TextBoxFor(u => u.Payment.ExpireMonth, htmlAttributes: new { @class = "form-control", placeholder = "Expiry Month", id = "expirymonth" })
                                                        @Html.ValidationMessageFor(u => u.Payment.ExpireMonth)
                                                        <br />
                                                        @Html.LabelFor(u => u.Payment.ExpireYear, htmlAttributes: new { @class = "control-label" })
                                                        <div class="span3">
                                                            @Html.TextBoxFor(u => u.Payment.ExpireYear, htmlAttributes: new { @class = "form-control", placeholder = "Expiry Year", id = "expiryyear" })
                                                            @Html.ValidationMessageFor(u => u.Payment.ExpireYear)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.LabelFor(u => u.Payment.SecurityCode, htmlAttributes: new { @class = "control-label" })
                                                <div class="controls">
                                                    <div class="row-fluid">
                                                        @Html.TextBoxFor(u => u.Payment.SecurityCode, htmlAttributes: new { @class = "form-control", placeholder = "Card CW", id = "cardcw" })
                                                        @Html.ValidationMessageFor(u => u.Payment.SecurityCode)
                                                        <div class="span8">
                                                            <!-- screenshot may be here -->
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                    <button type="submit" class="btn btn-submit" id="orderbutton">Pay</button>
                                            </div>

                                        @*<div>
                                            <p>Please press button ...</p>
                                            <input type="submit" class="btn btn-info" value="Pay ..." onclick="location.href='@Url.Action("Shop", "Shop")'" />
                                        </div>*@
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <input type="button" class="btn btn-info" value="Back To Shop" onclick="location.href='@Url.Action("Shop", "Shop", new { ShopPage = 1 })'" />
</div>