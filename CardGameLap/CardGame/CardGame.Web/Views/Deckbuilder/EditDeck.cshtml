@model CardGame.Web.Models.Deckbuilder

@{
    ViewBag.Title = "EditDeck";
}

   
    <div class="scroller-edit-deck row col-lg-6 col-md-6 col-sm-6 col-xs-6">
        <h3>Deckbuilder @Html.ActionLink("Return to Deck Overview", "Index", "Deckbuilder")</h3>
        Card Collection
        <div class="" style="height: 750px;">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="">Pic</th>
                        <th class="col-xs-6">Name</th>
                        <th class="col-xs-1">Mana</th>
                        <th class="col-xs-1">Att</th>
                        <th class="col-xs-1">Life</th>
                        <th class="col-xs-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CardGame.Web.Models.Card card in Model.Collection)
                    {
                        <tr>
                            <td>
                                @{var base64 = Convert.ToBase64String(card.Pic);
                                    var imgSrc = String.Format("data:image/png;base64,{0}", base64);

                                    <img class="cardpic" src="@imgSrc" />
                                }
                            </td>

                            <td class="col-xs-6">@Html.DisplayFor(c => card.Name)</td>
                            <td class="col-xs-1">@Html.DisplayFor(c => card.Mana)</td>
                            <td class="col-xs-1">@Html.DisplayFor(c => card.Attack)</td>
                            <td class="col-xs-1">@Html.DisplayFor(c => card.Life)</td>
                            <td class="col-xs-1">@Html.ActionLink("+", "AddCardToDeck", new { id = Model.Collection.IndexOf(card) })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="scroller-seite-zwei row col-lg-6 col-md-6 col-sm-6 col-xs-6">
        Deck @Html.ActionLink("Save Deck", "SaveDeck", new { id = Model.ID })
        <div class="" style="height: 750px;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="">Pic</th>
                        <th class="col-xs-6">Name</th>
                        <th class="col-xs-1">Mana</th>
                        <th class="col-xs-1">Att</th>
                        <th class="col-xs-1">Life</th>
                        <th class="col-xs-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CardGame.Web.Models.Card card in Model.Deck)
                    {
                        <tr>
                            <td>
                                @{var base64 = Convert.ToBase64String(card.Pic);
                                    var imgSrc = String.Format("data:image/png;base64,{0}", base64);

                                    <img class="cardpic" src="@imgSrc" />
                                }
                            </td>
                            <td class="col-xs-6">@Html.DisplayFor(c => card.Name)</td>
                            @*<td class="col-xs-2">@Html.DisplayFor(c => card.Type)</td>*@
                            <td class="col-xs-1">@Html.DisplayFor(c => card.Mana)</td>
                            <td class="col-xs-1">@Html.DisplayFor(c => card.Attack)</td>
                            <td class="col-xs-1">@Html.DisplayFor(c => card.Life)</td>
                            <td class="col-xs-1">@Html.ActionLink("x", "RemoveCardFromDeck", new { id = Model.Deck.IndexOf(card) })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

 








