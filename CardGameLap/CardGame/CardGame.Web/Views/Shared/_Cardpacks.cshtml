@model IEnumerable<CardGame.Web.Models.Packages>

@{
    ViewBag.Title = "_Cardpacks";
}




    <div class="panell" id="backgroundright">
        <div class="layout-background" id="wood_background">
            <h2>see all available Cardpacks</h2>
            <br />
            <div class="">

                @foreach (var cp in Model)
                {
                    <div class="packages-shopstart row col-md-6">
                        <hr />
                        <div class="col-sm-6">
                            <img src="~/Content/Images/pack1.png" alt="diamond" height="120" width="90" />
                        </div>
                        <br />
                        <div class="col-sm-6">

                            Pack @Html.DisplayFor(cardpack => cp.Packname)
                            <br />
                            Cards inside @Html.DisplayFor(cardpack => cp.CardQuantity)
                            <br />
                            Price @Html.DisplayFor(cardpack => cp.Packprice) <img src="~/Content/Images/diamond.png" alt="diamond" height="25" width="25" />
                        </div>
                        <br />
                    </div>
                }
            </div>
            <br />

