                <li class="col-md-1 text-center"><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                <li class="col-md-1 text-center"><a href="@Url.Action("Index", "Profile")">@gamertag 's Profil</a></li>
                <li class="col-md-1 text-center"><img src="~/Content/Images/diamond.png" class="navpic" style="width: 16px"/><a href="@Url.Action("Shop", "Shop")">@currency</a></li>
            </ul>
        }

        else
        {
            <ul class="row">
                <li class="col-md-1 text-center"><a href="@Url.Action("Index", "Home")">Welcome to our Shop</a></li>
                <li class="col-md-1 text-center"><a href="@Url.Action("Register", "Account")">REGISTER / LOGIN</a></li>
